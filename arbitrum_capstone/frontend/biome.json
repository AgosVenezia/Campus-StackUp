{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		},
		"ignore": ["test", "src/contracts/*"]
	},
	"files": {
		"include": [
			"src/**/*.js",
			"src/**/*.jsx",
			"test/**/*.js",
			"test/**/*.jsx",
			"src/**/*.ts",
			"src/**/*.tsx",
			"test/**/*.ts",
			"test/**/*.tsx"
		],
		"ignore": ["src/contracts/*"]
	}
}
